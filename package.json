{
  "name": "vscode-angular-inline",
  "displayName": "vscode-angular-inline",
  "description": "vscode-angular-html syntax highlighting ported to angular inline templates",
  "version": "0.0.1",
  "publisher": "ghaschel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ghaschel/vscode-angular-inline.git"
  },
  "bugs": {
    "url": "https://github.com/ghaschel/vscode-angular-inline/issues"
  },
  "scripts": {
    "watch": "gulp watch",
    "compile-json": "gulp compile-json",
    "publish": "standard-version && git push --follow-tags origin master && vsce publish"
  },
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "grammars": [
      {
        "path": "./syntaxes/inline-template.ng.json",
        "scopeName": "inline-template.ng",
        "injectTo": [
          "source.ts"
        ],
        "embeddedLanguages": {
          "text.html": "html",
          "source.css": "css",
          "source.js": "javascript"
        }
      }
    ]
  },
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "icon": "assets/angular-inline.png",
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "gulp": "^4.0.2",
    "gulp-json-editor": "^2.5.6",
    "gulp-json5-to-json": "^0.2.1",
    "gulp-merge-json": "^2.1.2",
    "husky": "^7.0.4",
    "json-beautify": "^1.1.1",
    "pretty-quick": "^3.1.3",
    "standard-version": "^9.3.2"
  },
  "config": {
    "husky": {
      "hooks": {
        "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
        "pre-commit": "npm run compile-json && pretty-quick --staged",
        "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
      }
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
