{
  "name": "vscode-angular-inline",
  "displayName": "vscode-angular-inline",
  "description": "vscode-angular-html syntax highlighting ported to angular inline templates",
  "version": "0.0.1",
  "publisher": "ghaschel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ghaschel/vscode-angular-inline.git"
  },
  "bugs": {
    "url": "https://github.com/ghaschel/vscode-angular-inline/issues"
  },
  "scripts": {
    "watch": "gulp watch",
    "compile-json": "gulp compile-json",
    "publish": "standard-version && git push --follow-tags origin master && vsce publish",
    "postinstall": "node scripts/postinstall.js",
    "prepare": "husky install",
    "test": "npx vscode-tmgrammar-test -g syntaxes/inline-template.ng.json -g test/externalGrammars/source.stylus.tmLanguage.json -g test/externalGrammars/source.css.scss.tmLanguage.json -g test/externalGrammars/source.ts.tmLanguage.json -g test/externalGrammars/source.sassdoc.tmLanguage.json -g test/externalGrammars/source.css.tmLanguage.json -g test/externalGrammars/source.css.less.tmLanguage.json test/*.ts",
    "update-snapshots": "npx vscode-tmgrammar-snap -s inline-template.ng -g syntaxes/inline-template.ng.json -g test/externalGrammars/source.stylus.tmLanguage.json -g test/externalGrammars/source.css.scss.tmLanguage.json -g test/externalGrammars/source.ts.tmLanguage.json -g test/externalGrammars/source.sassdoc.tmLanguage.json -g test/externalGrammars/source.css.tmLanguage.json -g test/externalGrammars/source.css.less.tmLanguage.json --updateSnapshot test/test.component.ts"
  },
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "grammars": [
      {
        "path": "./syntaxes/inline-template.ng.json",
        "scopeName": "inline-template.ng",
        "injectTo": [
          "source.ts"
        ],
        "embeddedLanguages": {
          "text.html": "html",
          "source.css": "css",
          "source.js": "javascript"
        }
      }
    ]
  },
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "icon": "assets/angular-inline.png",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "gulp": "^4.0.2",
    "gulp-json-editor": "^2.5.6",
    "gulp-json5-to-json": "^0.2.1",
    "gulp-merge-json": "^2.1.2",
    "gulp-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "json-beautify": "^1.1.1",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "standard-version": "^9.5.0",
    "vscode-tmgrammar-test": "^0.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
